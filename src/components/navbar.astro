---
interface Props {
	currPage: string;
}

const { currPage } = Astro.props;
---
<nav>
	<span></span>
	<ul>
		<li id="align">
			<img src="/favicon.svg" />Society of Engineering
		</li>
		<li class:list={{ active: currPage === 'home' }}>
			<a href={ currPage === 'home' ? "#" : "/" }>Home</a>
		</li>
		<li class:list={{ active: currPage === 'about'}}>
			<a href={ currPage === 'about' ? "#" : "/about-us" }>About</a>
		</li>
		<li class:list={{ active: currPage === 'team'}}>
			<a href={ currPage === 'team' ? "#" : "/the-team" }>The Team</a>
		</li>
		<li>
			<a href="#">Contact</a>
		</li>
	</ul>
</nav>

<style>
  img {
	width: 3vh;
	padding-right: 1vh;
  }
  #align {
	 display: flex;
	 align-items: center;
		margin-top: -.5vh;
  }
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 98%;
    background-color: #333;
    color: #fff;
    padding: 20px;
	 z-index: 1;
  }

  ul {
    display: flex;
    justify-content: space-between;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin-right: 20px;
  }
  li.active a {
    color: gold;
  }

  a {
   	color: #fff;
   	text-decoration: none;
		transition: .7s;
	}
	a:hover {
		font-size: 1.1em;
		transition: .7s;
	}
	span {
		height: 5px;
		width: 120%;
		background-color: gold;
		position: absolute;
		top: 1%;
		right: 1px;
		z-index: 1;
	}
</style>
